- var bodyClasses = [];
- var titleBase = "ImageLogic Boilerplate";
- var titleChild = "";

- var TBD  = "#TBD";
- var BLANK  = "_blank";
- var pageID = "";
- var lev = 0;
- var pathToRoot =  ""
- var lev1ID = "";
- var stanzaIDs = [];

block vars
- titleBase = "TogoMedium";

- title = titleChild ? titleChild + ' | ' + titleBase : titleBase;
- bodyClasses.push(lev1ID);
- for(var i=0; i<lev; i++){
-  pathToRoot += "../";
- }
- pathToRoot = "/";
- var pathToAssets = pathToRoot + "assets/";
- var pathToJS = pathToAssets + "js/";
- var pathToCSS = pathToAssets + "css/";
- var pathToLibs = pathToAssets + "libs/";
 - var pathToStanza = "https://dbcls.github.io/togomedium-stanza/";
// - var pathToStanza = "http://localhost:8080/";
- var pathToSVG = pathToAssets + "images/svg/";
- var pathToImgLG = pathToAssets + "images/lg/";
- var pathToImgMD = pathToAssets + "images/md/";
- var pathToImgSM = pathToAssets + "images/sm/";

doctype html
html(lang = 'ja', xmlns:og="http://ogp.me/ns#")
  head
    meta(charset="UTF-8")
    meta(http-equiv="X-UA-Compatible", content="IE=edge")
    meta(name="format-detection", content="telephone=no")
    meta(name="viewport", content="width=device-width,initial-scale=1.0,minimum-scale=1.0")
    meta(name="description", content=`${meta.description}`)
    meta(name="keywords", content=``)
    link(href="https://fonts.googleapis.com/css2?family=Fira+Sans+Condensed:wght@300;400;600&display=swap" rel="stylesheet")
    each stanzaID in stanzaIDs
      script(src=`${pathToStanza}${stanzaID}.js` type="module" async)

    link(href=`${pathToLibs}html5reset.css`, rel="stylesheet", type="text/css")
    link(href=`${pathToCSS}main.css`, rel="stylesheet", type="text/css")
    block links

    meta(property='og:title', content=``)
    meta(property='og:description', content=``)
    meta(property='og:type', content=``)
    meta(property='og:image', content=``)
    meta(property='og:image:width', content='1200')
    meta(property='og:image:height', content='630')
    meta(property='og:url', content=``)
    title= title
  body(class=bodyClasses)
    header.site-header
      .inner
        a(href="/").logo
        nav
          ul
            li(class = `${lev1ID === 'top' ? 'active' : ''}`): a(href="/") Home
            li(class = `${lev1ID === 'search' ? 'active' : ''}`): a(href="/search") Search
            li(class = `${lev1ID === 'about' ? 'active' : ''}`): a(href="/about") About
            li(class = `${lev1ID === 'statistics' ? 'active' : ''}`): a(href="/statistics") Statistics
            li(class = `${lev1ID === 'alignment' ? 'active' : ''}`): a(href="/media_alignment") Media alignment
          form(method="GET" action="/")
            input(placeholder="search", name="query")
    main
      block main
    script(src=`${pathToLibs}anime.min.js`)
    block scripts
    include ../_include/header.html
